<table class="table table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Options</th>
		</tr>
	</thead>
	<tbody>
		<% @class_categories.each do |category| %>
		<tr id="class-category-<%= category.id%>">
			<td id="class-category-title-<%= category.id%>">
				<% if category.visible? %>
					<%= sanitize_title(category.title) %>
				<% else %>
					<span class="muted"><%= sanitize_title(category.title) %></span>
				<% end %>
			</td>
			<td><%= link_to 'Show', category %></td>
			<td><%= link_to 'Edit', edit_class_category_path(category) %></td>
			<td><%= link_to 'Destroy', category, :confirm => 'Deleting this category will delete all sub-categories, classes and registrations associated with it. THIS ACTION CANNOT BE UNDONE. Are you sure you want to delete this category?', :method => :delete %></td>
			<td><%= link_to "#{(category.visible?) ? 'Hide' : 'Reveal' }", class_category_path(category, params.merge(:class_category => {:visible => !category.visible})), :method => :put,  :class => "toggle_visible", :remote => true %></td>
		</tr>
		<% end -%>
	</tbody>
</table>