<%= simple_fields_for(@user) do |f| %>
<fieldset>
	<legend>Class Reservation Request Form</legend>
	<%= f.input :username, :label => "NetID" %>
	<%= f.input :fullname, :label => "Name" %>
	<%= f.input :email %>
	<%= f.input :phone %>
	<%= f.input :program %>
	<%= f.input :school, collection: t("users.schools"), prompt: "Select one" %>
	<%= f.input :status, collection: t("users.statuses"), prompt: "Select one" %>
	<%= f.input :wherefrom, :label => "How did you find out about the classes NYU Libraries offers?", collection: t("users.wherefroms"), prompt: "Select one" %>
</fieldset>
<% end %>
