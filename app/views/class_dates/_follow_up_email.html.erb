<%= simple_form_for @response_email, :url => {:controller => "class_dates", :action => "send_follow_up"}, :method => 'post' do |f| %>
	<%= f.input :reply_to, label: "Reply-To" %>
	<%= f.input :subject %>
	<%= f.input :body, as: :text, input_html: { :value => format_followup_tokens(@response_email.body) } %>
	<input type="hidden" name="class_date" value="<%= class_date.id %>" />
	<%= f.submit "Send to attended" %>
<% end -%>