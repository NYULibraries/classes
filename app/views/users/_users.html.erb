<p><%= page_entries_info @users %></p>

<%= paginate @users, :theme => "bootstrap" %>

<div class="btn-group">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    Action
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to users_url(:format => :csv) do %><i class="icon-download-alt"></i> Download as CSV<% end -%></li>
  </ul>
</div>

<div class="btn-group">
  <a class="btn btn-danger dropdown-toggle" data-toggle="dropdown" href="#">
    Delete
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to clear_users_url, :data => {:confirm => 'This will delete all users without registrations and cannot be undone. Are you sure?'}, :method => :delete do %><i class="icon-ban-circle"></i> Clear all inactive users<% end -%></li>
  </ul>
</div>

<br /><br />


<table class="table table-striped">
  <thead>
	  <tr>
		<th><%= link_to_sorted "Username", "username" %></th>
		<th><%= link_to_sorted "Name", "fullname" %></th>
		<th><%= link_to_sorted "Email", "email" %></th>
		<th><%= link_to_sorted "Program", "program" %></th>
		<th><%= link_to_sorted "School", "school" %></th>
		<th><%= link_to_sorted "Status", "status" %></th>
      	<th>Options</th>
    </tr>
  </thead>
  <tbody>
   <% @users.each do |user| %>
    <tr>
	    <td><%=h user.username %></td>
	    <td><%=h user.fullname %></td>
	    <td><%=h user.email %></td>
	    <td><%=h user.program %></td>
	    <td><%=h user.school %></td>
	    <td><%=h user.status %></td>
	    <td><%= link_to 'Show', user %></td>
	 	<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<td><%= link_to 'Destroy', user, :confirm => 'Deleting this user will also delete all their associated registrations. Are you sure?', :method => :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users, :theme => "bootstrap" %>